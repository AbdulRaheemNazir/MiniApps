//Option Four


        static void Optionfour()                                                                                                                     
        {



            bool validstring = true;
            do
            {
                Console.WriteLine("Decrypt Text");
                Console.WriteLine("------------");
                Console.WriteLine("Please enter text to decrypt:");                                                                                                
                string UserString = Console.ReadLine();                                                                                                   
                Regex r = new Regex("^[a-zA-Z ]+$");
                validstring = true;

                if (r.IsMatch(UserString))                                                                                                                    
                {
                    bool validshift = true;
                    do
                    {
                        Console.WriteLine(" ");                                                                                                                
                        Console.Write("Please enter shift (between 1 and 36)");                                                                                                 
                        int key = Convert.ToInt32(Console.ReadLine());                                                                           
                        Console.WriteLine(" ");

                        if (key > 0 && key < 37)                                                                                                
                        {
                           Console.WriteLine("Encrypted Data");                                                                              
                           string cipherText = Decipher(UserString, key);                                                                                  
                           Console.WriteLine(cipherText);                                                                                                      
                           validshift = true;
                           Console.ReadLine();                                                                                                                 
                        }

                        else
                        {
                            validshift = false;
                            Console.WriteLine("Invalid shift amount");
                        }

                        } while (!validshift);
                }

                else                                                                                                                    
                {
                    Console.WriteLine("Invalid input text");       
                    Optionfour();                                                                                                                                
                }

            } while (!validstring);

        }



